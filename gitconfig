    name = Bryan Richter
    email = b@chreekat.net
[credential]
    helper = cache --timeout=3600
[core]
    ; autocrlf = input
    excludesfile = ~/.ignore
	quotepath = off
	longpaths = true
[color]
	ui = auto
[color "decorate"]
    branch = 2
    remoteBranch = 3
    HEAD = 1
    tag = 6
[color "diff"]
    meta = 13 reverse
    commit = 10
[alias]
    m = merge -S --no-ff
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
    b = branch -vv
    st = status --short -b
    d = diff --color-words=.
    # Rebase with pgp sigs. Only useful for my own commits obvs
    rb = rebase --exec 'git commit -S --amend -C'
    dc = diff --color-words=. --cached
    qs = commit -am "QUICKSAVE"
    ci = commit -S
    co = checkout
    root = rev-parse --show-toplevel
    clown = clone
    ignored = clean -ndX
    cp = cherry-pick
    which = ls-tree -r HEAD --name-only
    sm = submodule
    smap = submodule foreach
[rebase]
    autosquash = true
[fetch]
    prune = true
; [merge]
;     tool = splice
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[push]
    default = simple
[merge]
	tool = vimdiff
	gpgsign = true
[rerere]
	enabled = true
[commit]
	gpgsign = true
[diff]
	mnemonicprefix = true
[grep]
	linenumber = true
