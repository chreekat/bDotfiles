# ~/.bash_login: Options for login shells.

# Dump some info when creating a new shell
if [ ! -v TMUX ]; then
    date
    echo -n 'Battery: '
    ~/.tmux/bat.sh
    echo 'Tmux: '
    tmux ls |& awk '{print "  ", $0}'
fi

# Interactive logins also need to source .bashrc

if [ "${PS1:+x}" = x ] && ( echo $- | grep -q i ); then
    . ~/.bashrc
fi
