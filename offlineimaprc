# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
accounts = Personal
#,Barobo
# google isn't snappy with imap
socktimeout = 30
fsync = false
pythonfile=~/.offlineimap/helper.py

[Account Personal]
localrepository = PersonalLocal
remoterepository = PersonalRemote
status_backend = sqlite
maxage = 90

#[Account Barobo]
#localrepository = BaroboLocal
#remoterepository = BaroboRemote
#status_backend = sqlite
#maxage = 90

[Repository PersonalLocal]
type = Maildir
localfolders = ~/Mail/Personal
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'starred': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            'chats':   '[Gmail]/Chats',
                            }.get(folder, folder)

[Repository PersonalRemote]
type = Gmail
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = bryan.richter@gmail.com
# To set the password, do:
# >>> import keyring
# >>> keyring.set_password("gmail", "username", "password")

remotepasseval = get_password("gmail", "personal")
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'starred',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            '[Gmail]/Chats':     'chats',
                            }.get(folder, folder)

[Repository BaroboLocal]
type = Maildir
localfolders = ~/Mail/Barobo
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'starred': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository BaroboRemote]
type = Gmail
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = bryan@barobo.com
# To set the password, do:
# >>> import keyring
# >>> keyring.set_password("gmail", "username", "password")

remotepasseval = get_password("gmail", "barobo")
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'starred',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
